<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  GDC - Color Setup  -->
    <color name="error_color">#FF0000</color>
    <color name="warning_color">#FF9900</color>
    <color name="success_color">#00FF00</color>
    <color name="hint_text_box_color">#757575</color>
    <color name="hint_text_box_color_active">#909090</color>
    <color name="underline_text_box_color">#757575</color>

    <!-- Base application theme. -->
    <style name="Theme.LearnApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- CursorColor -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorHint">@color/hint_text_box_color</item>
        <item name="android:textColorHintInverse">@color/hint_text_box_color_active</item>
        <item name="cardBackgroundColor">@color/white</item>

    </style>

    <style name="Theme.LearnApp.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/underline_text_box_color</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="hintTextColor">@color/hint_text_box_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.LearnApp.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.LearnApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.LearnApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>




</resources>